#!/usr/sbin/install-menu

compat="menu-2";

onlyrunasroot=true;

treewalk=(M);
rootprefix="/etc/X11/gwm2/";
userprefix="gwm/";
mainmenutitle="Debian Menu";

preoutput= ";; This file was automatically generated by update-menus. Please don't edit.\n\n(define (make-debian-menu-popup)\n  (apply construct-menu (cons default-menu-style (cadr\n";

function quote($text)= "\"" esc($text,"\"") "\"";
function entry($com)= "(list " quote($title) " (lambda (x) " $com "))\n";

supported;
  wm=   entry("(restart " quote($command) ")");
  x11=  entry("(execute \"/bin/sh\" \"-c\" " quote($command) ")");
  text= entry("(execute \"xterm\" \"-T\" " quote($title) " \"-e\" " quote($command) ")");
endsupported;

startmenu= "(list " quote($title) " (list " quote($title) "\n";
endmenu= "))\n";

postoutput= "))))\n\n";

genmenu="debian-menu.scm";
